    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debugar - Local",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/app.js",
            "env": {
                "NODE_ENV": "default"
            }
        },
        {
            "name": "Debugar Teste Unit√°rio",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/test/unit/*.js",
                "--no-timeouts",
                "--exit"
            ]
        },
        {
            "name": "Debugar Teste Integrado",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceFolder}/test/integration/*.js",
                "--no-timeouts"
            ]
        }
    ]
}